int reverse(int x)
{
	int returned = 0;
	do
	{
		int remainder = x % 10;
    if (returned > INT_MAX / 10 || (returned == INT_MAX / 10 && remainder > 7))
		{
			return 0;
		}
	  if (returned < INT_MIN / 10 || (returned == INT_MIN / 10 && remainder < -8))
		 return 0;
     
		returned = (returned * 10) + remainder;
		
		x /= 10;

	} while (x != 0);
	return returned;
}
